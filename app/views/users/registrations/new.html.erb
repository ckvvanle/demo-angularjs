<% provide :title, t(".sign_up") %>
<h2 class="text-center"><%= t ".sign_up" %></h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <div class="field">
        <%= f.label t(".username") %><br />
        <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".email") %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".password") %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".password_confirmation") %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".address") %><br />
        <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label t(".phone") %><br />
        <%= f.text_field :phone, autocomplete: "phone", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t(".create"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
