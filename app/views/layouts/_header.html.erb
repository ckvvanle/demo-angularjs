<div class="container">
  <div class="col-sm-6">
    <div class="logo">
      <%= link_to image_tag("logo.png", alt: t("alt.logo"),
        class: "img-responsive"), "#" %>
    </div>
  </div>
</div>
<div class="mainmenu-area">
  <div class="container">
    <div class="row">
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to t("home"), root_path, class: "glyphicon glyphicon-home" %></li>
          <li><%= link_to t("help"), "#", class: "glyphicon" %></li>
          <li><%= link_to t("about"), "#", class: "glyphicon" %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li>
              <%= link_to t("user_home"), user_path(current_user) %>
            </li>
            <li class="right_to">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t ".account" %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("profile"), current_user, class: "glyphicon glyphicon-user" %></li>
                <li>
                  <%= link_to t("settings"), "#", class: "glyphicon glyphicon-cog" %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("log_out"), logout_path, method: :delete,
                    class: "glyphicon glyphicon-log-in" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li>
              <%= link_to t("login"), login_path,class: "glyphicon glyphicon-log-in" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
