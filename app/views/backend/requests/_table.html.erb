<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= t ".list_request" %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= t ".list_request" %>
        </div>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
        <div class="panel-body">
          <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
              <thead>
                <tr>
                  <th class="center"><%= t ".id" %></th>
                  <th class="center"><%= t ".name" %></th>
                  <th class="center"><%= t ".description" %></th>
                  <th class="center"><%= t ".status" %></th>
                  <th class="center"><%= t ".customer" %></th>
                  <th class="center"><%= t ".category" %></th>
                  <th class="center" colspan="2"><%= t ".function" %></th>
                </tr>
              </thead>
              <tbody>
                <%= render partial: "request", collection: @requests %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
