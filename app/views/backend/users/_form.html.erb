        <div class="panel-body">
          <div class="row">
            <div class="col-lg-6">
              <%= form_for [:backend, @user] do |f| %>
                <div class="form-group">
                  <%= label_tag t ".name" %>
                  <%= f.text_field :name, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= label_tag t ".email" %>
                  <%= f.text_field :email, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= label_tag t ".password" %>
                  <%= f.password_field :password, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= label_tag t ".password_confirmation" %>
                  <%= f.password_field :password_confirmation, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= label_tag t ".address" %>
                  <%= f.text_field :address, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= label_tag t ".role" %>
                  <%= f.select :role, display_roles_select_box(@roles),
                    class: "form-control"%>
                </div>
                <div class="form-group">
                  <%= label_tag t ".phone" %>
                  <%= f.text_field :phone, class: "form-control" %>
                </div>
                <%= f.submit t(".submit"), class: "btn btn-default" %>
                <%= f.button t(".reset"), type: :reset, class: "btn btn-default" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
