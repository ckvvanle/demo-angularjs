<%= form_for [:backend, @category], class: "form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.label :name, t("category.name"), class: "control-label col-md-3" %>
    <div class="col-md-9">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <%= f.hidden_field :parent_id, value: Settings.category_roof %>
  </div>
  <div class="form-group">
    <div class="col-md-offset-3 col-md-9 btn-create">
      <%= f.submit yield(:button), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
