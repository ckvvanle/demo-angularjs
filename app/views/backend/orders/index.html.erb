<section class="list-order">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4">
        <h2><%= t "orders.list_order" %></h2>
      </div>
      <div class="col-md-8 search-form-order text-right">
        <%= form_tag backend_orders_path, method: :get do %>
          <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag t("category.search") %>
          </p>
        <% end %>
      </div>
    </div>
    <table class="table table-bordered table-order">
      <thead>
        <tr class="bg-info">
          <th><%= t "orders.no" %></th>
          <th><%= t "orders.user_name" %></th>
          <th class="text-center"><%= t "orders.status" %></th>
          <th class="text-center"><%= t "orders.date_order" %></th>
          <th class="text-center"><%= t "orders.total_price" %></th>
          <th class="text-center"><%= t "orders.detail" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @orders %>
      </tbody>
    </table>

    <%= will_paginate %>
  </div>
</section>
