<div class="">
  <div class="row">
    <div class="col-xs-12 col-xs-offset-0">
      <%= form_tag products_path, method: :get do  %>
        <div class="input-group search-form">
          <div class="form-group">
            <%= text_field_tag :name, params[:name], class: "form-control  search-name-width", placeholder: t("search.name") %>
          </div>
          <div class="form-group">
            <%= number_field_tag :min, params[:min], placeholder: t("search.min"), class: "form-control search-min-width" %>
          </div>
          <div class="form-group">
            <%= number_field_tag :max, params[:max], placeholder: t("search.max"), class: "form-control search-max-width" %>
          </div>
          <div class="form-group">
            <%= select_tag :category, options_for_select(category_select), class: "select form-control search-category-width", include_blank: t("search.all") %>
          </div>

          <span class="input-group-btn">
            <button class="btn btn-primary search-button" type="submit"><span class="glyphicon glyphicon-search"></span></button>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>

